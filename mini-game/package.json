{
    "name": "bubbo-bubbo",
    "version": "1.0.0",
    "type": "module",
    "description": "A simple PixiJS game project to help developers learn how a professional makes games using the PixiJS library.",
    "author": {
        "name": "AshsHub",
        "url": "https://github.com/AshsHub"
    },
    "scripts": {
        "prestart": "run-s assets",
        "start": "vite --open",
        "clean": "rimraf dist",
        "prebuild": "run-s clean lint assets types",
        "build": "vite build --base \"./\"",
        "assets": "assetpack",
        "prepreview": "run-s build",
        "preview": "vite preview --open",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write src",
        "format:check": "prettier --check src",
        "types": "tsc"
    },
    "dependencies": {
        "gsap": "^3.12.5",
        "pixi.js": "^8.2.4",
        "pixi-filters": "^6.0.4",
        "@pixi/ui": "^2.1.2",
        "@pixi/sound": "6.0.0",
        "typed-signals": "^2.5.0"
    },
    "devDependencies": {
        "@assetpack/core": "^1.0.0-rc",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "eslint": "^8.57.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.5.3",
        "vite": "^5.3.3"
    }
}
